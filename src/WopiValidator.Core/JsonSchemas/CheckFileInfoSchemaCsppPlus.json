{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "WOPI CheckFileInfo JSON Schema for CSPP+",
  "description": "A WOPI CheckFileInfo JSON response with additional requirements for Cloud Storage Partner Program Plus (CSPP+)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "BaseFileName",
    "OwnerId",
    "Size",
    "UserId",
    "Version"
  ],
  "properties": {
    "AccessTokenExpiry": {
      "type": "number",
      "description": "Required for CSPP+. Unix timestamp when the access token expires"
    },
    "AllowAdditionalMicrosoftServices": {
      "type": "boolean"
    },
    "AllowEarlyFeatures": {
      "type": "boolean"
    },
    "AllowErrorReportPrompt": {
      "type": "boolean"
    },
    "AllowExternalMarketplace": {
      "type": "boolean"
    },
    "AppStateHistoryPostMessage": {
      "type": "boolean"
    },
    "BaseFileName": {
      "type": "string",
      "minLength": 1,
      "description": "Required. The name of the file, including extension, without the path."
    },
    "BreadcrumbBrandName": {
      "type": "string"
    },
    "BreadcrumbBrandUrl": {
      "format": "uri",
      "type": "string"
    },
    "BreadcrumbDocName": {
      "type": "string"
    },
    "BreadcrumbFolderName": {
      "type": "string"
    },
    "BreadcrumbFolderUrl": {
      "format": "uri",
      "type": "string"
    },
    "ClientThrottlingProtection": {
      "type": "string"
    },
    "ClientUrl": {
      "format": "uri",
      "type": "string"
    },
    "CloseButtonClosesWindow": {
      "type": "boolean"
    },
    "ClosePostMessage": {
      "type": "boolean"
    },
    "CloseUrl": {
      "format": "uri",
      "type": "string"
    },
    "CobaltCapabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [ "DownloadStreaming" ]
      }
    },
    "ComplianceDomainPrefix": {
      "type": "string"
    },
    "CopyPasteRestrictions": {
      "type": "string",
      "enum": [ "BlockAll", "CurrentDocumentOnly" ]
    },
    "DisableBrowserCachingOfUserContent": {
      "type": "boolean"
    },
    "DisablePrint": {
      "type": "boolean"
    },
    "DisableTranslation": {
      "type": "boolean"
    },
    "DownloadUrl": {
      "format": "uri",
      "type": "string"
    },
    "EditAndReplyUrl": {
      "format": "uri",
      "type": "string"
    },
    "EditModePostMessage": {
      "type": "boolean"
    },
    "EditNotificationPostMessage": {
      "type": "boolean"
    },
    "FileEmbedCommandPostMessage": {
      "type": "boolean"
    },
    "FileEmbedCommandUrl": {
      "format": "uri",
      "type": "string"
    },
    "FileExtension": {
      "type": "string",
      "pattern": "^\\."
    },
    "FileGeoLocationCode": {
      "type": "string"
    },
    "FileNameMaxLength": {
      "type": "integer",
      "minimum": 1
    },
    "FileSharingPostMessage": {
      "type": "boolean"
    },
    "FileSharingUrl": {
      "format": "uri",
      "type": "string"
    },
    "FileUrl": {
      "format": "uri",
      "type": "string"
    },
    "FileVersionPostMessage": {
      "type": "boolean"
    },
    "FileVersionUrl": {
      "format": "uri",
      "type": "string"
    },
    "HostAuthenticationId": {
      "type": "string"
    },
    "HostEditUrl": {
      "format": "uri",
      "type": "string"
    },
    "HostEmbeddedEditUrl": {
      "format": "uri",
      "type": "string"
    },
    "HostEmbeddedViewUrl": {
      "format": "uri",
      "type": "string"
    },
    "HostNotes": {
      "type": "string"
    },
    "HostViewUrl": {
      "format": "uri",
      "type": "string"
    },
    "HostRestUrl": {
      "format": "uri",
      "type": "string"
    },
    "IrmPolicyDescription": {
      "type": "string"
    },
    "IrmPolicyTitle": {
      "type": "string"
    },
    "IsAnonymousUser": {
      "type": "boolean"
    },
    "IsEduUser": {
      "type": "boolean"
    },
    "LastModifiedTime": {
      "format": "date-time",
      "type": "string"
    },
    "LicenseCheckForEditIsEnabled": {
      "type": "boolean"
    },
    "OwnerId": {
      "type": "string",
      "minLength": 1,
      "description": "Required. String that uniquely identifies the owner of the file."
    },
    "OfficeCollaborationServiceEndpointUrl": {
      "format": "uri",
      "type": "string",
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "PostMessageOrigin": {
      "format": "uri",
      "type": "string"
    },
    "PresenceProvider": {
      "type": "string"
    },
    "PresenceUserId": {
      "type": "string"
    },
    "ProtectInClient": {
      "type": "boolean"
    },
    "ReadOnly": {
      "type": "boolean"
    },
    "RealTimeChannelEndpointUrl": {
      "format": "uri",
      "type": "string",
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "RequestedCallThrottling": {
      "type": "string",
      "enum": [ "Normal", "Minor", "Medium", "Major", "Critical" ]
    },
    "RestrictedWebViewOnly": {
      "type": "boolean"
    },
    "SHA256": {
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{64}$"
    },
    "SequenceNumber": {
      "type": "number",
      "minimum": 0,
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "ServerTime": {
      "type": "number",
      "description": "Required for CSPP+ when SupportsCoauth is true. Unix timestamp representing the current server time"
    },
    "SharingStatus": {
      "type": "string",
      "enum": [ "Private", "Shared" ],
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "SignInUrl": {
      "format": "uri",
      "type": "string"
    },
    "SignoutUrl": {
      "format": "uri",
      "type": "string"
    },
    "Size": {
      "type": "number",
      "minimum": 0,
      "description": "Required. The size of the file in bytes."
    },
    "SupportedShareUrlTypes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [ "ReadOnly", "ReadWrite" ]
      }
    },
    "SupportsAddActivities": {
      "type": "boolean"
    },
    "SupportsCoauth": {
      "type": "boolean",
      "description": "Must be true for CSPP+"
    },
    "SupportsCobalt": {
      "type": "boolean"
    },
    "SupportsContainers": {
      "type": "boolean"
    },
    "SupportsDeleteFile": {
      "type": "boolean"
    },
    "SupportsEcosystem": {
      "type": "boolean"
    },
    "SupportsExtendedLockLength": {
      "type": "boolean"
    },
    "SupportsFileCreation": {
      "type": "boolean"
    },
    "SupportsFolders": {
      "type": "boolean"
    },
    "SupportsGetActivities": {
      "type": "boolean"
    },
    "SupportsGetFileWopiSrc": {
      "type": "boolean"
    },
    "SupportsGetLock": {
      "type": "boolean"
    },
    "SupportsLocks": {
      "type": "boolean",
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "SupportsRename": {
      "type": "boolean"
    },
    "SupportsScenarioLinks": {
      "type": "boolean"
    },
    "SupportsSecureStore": {
      "type": "boolean"
    },
    "SupportsUpdate": {
      "type": "boolean",
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "SupportsUserAccess": {
      "type": "boolean"
    },
    "SupportsUserInfo": {
      "type": "boolean",
      "description": "Required for CSPP+ when SupportsCoauth is true"
    },
    "SupportsChunkedFileTransfer": {
      "type": "boolean"
    },
    "TemporarilyNotWritable": {
      "type": "boolean"
    },
    "TenantId": {
      "type": "string"
    },
    "TimeZone": {
      "type": "string"
    },
    "UniqueContentId": {
      "type": "string"
    },
    "UserCanAttend": {
      "type": "boolean"
    },
    "UserCanNotWriteRelative": {
      "type": "boolean"
    },
    "UserCanPresent": {
      "type": "boolean"
    },
    "UserCanRename": {
      "type": "boolean"
    },
    "UserCanWrite": {
      "type": "boolean"
    },
    "UserFriendlyName": {
      "type": "string",
      "description": "Required for CSPP+ when SupportsCoauth is true. Display name for the user."
    },
    "UserId": {
      "type": "string",
      "minLength": 1,
      "description": "Required. String that uniquely identifies the user."
    },
    "UserInfo": {
      "type": "string"
    },
    "UserPrincipalName": {
      "type": "string",
      "format": "email"
    },
    "Version": {
      "type": "string",
      "minLength": 1,
      "description": "Required. The current version of the file based on the server's file versioning schema."
    },
    "WebEditingDisabled": {
      "type": "boolean"
    },
    "WorkflowPostMessage": {
      "type": "boolean"
    },
    "WorkflowType": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [ "Assign", "Submit" ]
      }
    },
    "WorkflowUrl": {
      "format": "uri",
      "type": "string"
    }
  },
  "if": {
    "properties": {
      "SupportsCoauth": { "const": true }
    }
  },
  "then": {
    "required": [
      "BaseFileName",
      "OwnerId", 
      "Size",
      "UserId",
      "Version",
      "AccessTokenExpiry",
      "OfficeCollaborationServiceEndpointUrl",
      "RealTimeChannelEndpointUrl",
      "SequenceNumber",
      "ServerTime",
      "SharingStatus",
      "SupportsLocks",
      "SupportsUpdate",
      "SupportsUserInfo",
      "UserFriendlyName"
    ]
  }
}
